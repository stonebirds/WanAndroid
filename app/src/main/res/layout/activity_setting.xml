<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <include layout="@layout/layout_common_title"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f6f6f6"/>

        <RelativeLayout
                android:id="@+id/btn_clear_setting_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="清除缓存"
                    android:textColor="@color/black_333333"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_cache_setting_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/iv_right_setting_activity"
                    android:text="0M"
                    android:textColor="@color/black_333333"
                    android:textSize="14sp"/>

            <ImageView
                    android:id="@+id/iv_right_setting_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right_black"/>

        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="@color/gray_f6f6f6"/>
    </LinearLayout>

    <com.coorchice.library.SuperTextView
            android:id="@+id/btn_logout_setting_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:stv_corner="5dp"
            app:stv_pressBgColor="@color/black_33c9c5c5"
            app:stv_solid="@color/black_333333"/>
</RelativeLayout>