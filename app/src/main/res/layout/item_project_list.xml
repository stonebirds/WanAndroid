<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:orientation="vertical">


    <TextView
            android:id="@+id/tv_title_project_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/iv_pic_project_list_item"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black_333333"
            android:textSize="16sp"
            tools:text="标题"/>

    <TextView
            android:id="@+id/tv_intro_project_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_project_list_item"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/iv_pic_project_list_item"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/gray_999999"
            android:textSize="14sp"
            tools:text="标题"/>

    <ImageView
            android:id="@+id/iv_flavor_pic_project_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_author_project_list_item"
            android:layout_alignBottom="@+id/iv_pic_project_list_item"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/icon_unflavor"/>

    <TextView
            android:id="@+id/tv_author_project_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pic_project_list_item"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_flavor_pic_project_list_item"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            tools:text="@string/article_author"/>

    <TextView
            android:id="@+id/tv_time_project_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_pic_project_list_item"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/iv_pic_project_list_item"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            tools:text="2019-08-04"/>

    <ImageView
            android:id="@+id/iv_pic_project_list_item"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_mine"/>

    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_below="@+id/iv_flavor_pic_project_list_item"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="10dp"
          android:background="@color/gray_cecece"/>
</RelativeLayout>