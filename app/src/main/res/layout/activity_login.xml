<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/layout_common_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="登录"
            android:textColor="@color/black_333333"
            android:textSize="24dp"
            android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_username_login_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp">

        <EditText
                android:id="@+id/et_username_login_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_999999"
                android:textSize="16sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/til_password_login_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp">

        <EditText
                android:id="@+id/et_password_login_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColor="@color/black_333333"
                android:textColorHint="@color/gray_999999"
                android:textSize="16sp"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
            android:id="@+id/btn_login_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray_cdcdcd"
            android:clickable="true"
            android:enabled="false"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="16sp"/>
</LinearLayout>